
<h1>Hola estoy en el - Lista de Productos</h1>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
<link rel="stylesheet" href="/css/style.css">

{{#if isValid}}
<div class="main">
    {{#each docs}}
    <div class="card" style="width: 18rem;">
        <img src={{this.thumbnails}} class="card-img-top">
        <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <h5 class="card-title">{{this.price}}</h5>
            <p class="card-text">{{this.description}}</p>
            <a href="#" class="btn btn-primary">Agregar al carrito</a>
            <br/>
            <br/>
            <a href="/products/productid/{{this.id}}" class="btn btn-primary">Más información</a>
        </div>
     </div>
    <br/>
    {{/each}}
</div>
<br/>
<div>
    {{#if hasPrevPage}}
        <a href={{this.prevLink}}><< Anterior</a>
    {{/if}}
    &nbsp;
    {{this.page}}
    &nbsp;
     {{#if hasNextPage}}
        <a href={{this.nextLink}}>Siguiente >></a>
    {{/if}} 
</div>
{{else}}
<h1>No hay Productos para mostrar</h1>
{{/if}}
